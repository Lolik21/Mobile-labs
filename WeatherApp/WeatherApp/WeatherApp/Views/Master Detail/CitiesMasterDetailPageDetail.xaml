<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.CitiesMasterDetailPageDetail"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             Title="{Binding CityName}">
    <ScrollView>
        <StackLayout>
            <Label Text="{Binding CityName}" HorizontalTextAlignment="Center" TextColor="{Binding FontColor}"/>
            <Image Source="{Binding BigImageSource}" HeightRequest="500"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding CityWeather}" 
                       TextColor="{Binding FontColor}" VerticalOptions="StartAndExpand"/>
                <Image VerticalOptions="CenterAndExpand"/>
                <Label Text="{Binding CityCountry}" 
                       TextColor="{Binding FontColor}" VerticalOptions="EndAndExpand"/>
            </StackLayout>
            <Label Text="{Binding CityDescription}" TextColor="{Binding FontColor}"/>
            <maps:Map x:Name="mainMap" MapType="Hybrid" HeightRequest="500"/>
        </StackLayout>
    </ScrollView>
</ContentPage>